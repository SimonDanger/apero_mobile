{% extends "::base.html.twig" %}

{% block title %}Liste des soirées{% endblock %}

{% block body %}
    <div class="well">
        <table>
            <thead>
            <tr>
                <th>Nom de la Soirée :</th>
                <th>Coût de la participation :</th>
                <th>Description :</th>
                <th>Participants :</th>
            </tr>
            </thead>
            <tbody>
            {% for soiree in soirees %}
                <tr>
                    <td>{{ soiree.nom }}</td>
                    <td>{{ soiree.paiement }}</td>
                    <td>{{ soiree.description }}</td>
                    <td>{{ users.username }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
